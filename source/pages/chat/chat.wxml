
<scroll-view scroll-y="true" scroll-into-view="{{scrollLast}}" scroll-with-animation="true" class='chat_content'>
<view wx:for="{{chatList}}">
    
    <block wx:if="{{item._openid!=userInfo._openid}}">
        <view class="top">
            <image class="face" src="{{target_user_avatarUrl}}"></image>
            <view class="bot">
                <text>{{item.text}}</text>
            </view>
        </view>

    </block>

    <block wx:if="{{item._openid==userInfo._openid}}">
        <view class="top-right">
            <view class="bot-right">
                <text>{{item.text}}</text>
            </view>
            <image class="face-right" src="{{userInfo.avatarUrl}}"></image>
        </view>
    </block>
</view>
<view id="toView" class="test"></view>
</scroll-view>



<view class="pub-comment">

    <view class="pub-left">

        <input class="pub-input" bindinput="getInputValue" value="{{inputValue}}"></input>
    </view>

    <view class="pub-button{{inputValue==''?'':'-with-text'}}" bindtap="publishMessage" wx:if="{{!disabled_send}}">发送</view>
    <view class="pub-button" wx:if="{{disabled_send}}">发送</view>

</view>