/* 侧导航 */
.side{
  background-color: #fff;
  width: 100rpx;
  height: 200rpx;
  border-radius: 50rpx;
  position: fixed;
  top: 1100rpx;
  left: 630rpx;
}
.side .go{
  margin-left: 13rpx;
  margin-top: 10rpx;
}
.side .go image{
  width: 80rpx;
  height: 80rpx;
}
.side .add{
