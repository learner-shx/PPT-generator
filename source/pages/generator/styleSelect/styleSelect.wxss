.content {
  background-color: #fff;
  padding: 20rpx;
  width: 85%;
  margin: 0 auto;
  border-radius: 50rpx;
  margin-top: 30rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #e1e1e1;
}

.submitButton {
  background-color: #ffeb37;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 30rpx;
  width: 80%;
  text-align: center;
  padding: 30rpx;
  margin-bottom: 50rpx;
  margin-left: 40rpx;
  box-shadow: 5rpx 5rpx 10rpx 5rpx #e1e1e1;
  position: fixed;
  bottom: 0;
}

.submitButton-hover {
  background-color: #ffeb37;
  box-shadow: 10rpx 10rpx 20rpx 10rpx #e1e1e1;
}

.bottom-content {
  width: 100%;
  height: 70rpx;
  background-color: rgb(253, 253, 253);
  padding-bottom: 35rpx;
}

.me-about {
  display: flex;
  margin: 20rpx 40rpx;
  padding: 30rpx 0rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid rgb(238, 238, 238);
}

.switch {
  margin: 20rpx 0rpx;
}

.me-about view {
  align-self: center;
  width: 35rpx;
  height: 35rpx;
  margin-left: 100rpx;
}
.configuration .me-about button {
  position: relative;
  font-weight: normal;
